<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MedScope" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>

        <item name="android:indeterminateTint">@color/blue</item>
        <item name="android:activatedBackgroundIndicator">@color/blue</item>

        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/jura_bold</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="indicatorColor">@color/blue_light2 </item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="background">@color/blue_light</item>
    </style>


    <style name="dialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shape_dialog</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>